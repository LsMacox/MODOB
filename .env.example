# Rename to .env and fill values
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
DB_HOST=db
DB_PORT=5432
DB_NAME=botdb
DB_USER=bot
DB_PASSWORD=botpass
# Default anti-spam settings
SPAM_LIMIT=5      # messages
SPAM_INTERVAL=10  # seconds
REPEAT_LIMIT=3    # identical messages
REPEAT_INTERVAL=10
# Access control
ALLOWED_USERS=123456789,987654321  # comma-separated list of user IDs allowed to use the bot

# Anti-spam additional settings
LINK_SPAM_ENABLED=1  # 1=enabled, 0=disabled
LINK_SPAM_LIMIT=3  # links before blocking

# Notification settings
NOTIFY_ON_UNAUTHORIZED=1  # 1=send notifications to admins, 0=disable notifications
UNAUTHORIZED_MESSAGE=У вас нет доступа к этому боту. Обратитесь к администратору.